<div class="panel panel-default">
    <div class="panel-heading">
        メッセージ一覧
    </div>
<div class="panel-body">
<% @messages.each do |message| %>
    <span class="label label-info"><%= message.name %></span>
    <%= message.body %>
    <br>
<% end %>
</div>
</div>

<div class="col-sm-6">
<%= form_for(Message.new) do |f| %>
<label for="name">名前：</label>
<%= f.text_field :name, class:"form-control" , id:"name" , placeholder:"お名前" %><br>

<label for="textarea">内容：</label>
<%= f.text_area :body , class:"form-control" , :size =>"60x3" , id:"textarea" , placeholder:"コメント" %><br>
<%= f.submit class:"btn btn-sm btn-primary" %><br>
<% end %>
</div>