<%= form_for(@message) do |f| %>
<% if @message.errors.present? %>
<div class="alert alert-danger">
    <% alert %>
    <ul>
        <% @message.errors.full_messages.each do |full_messages| %>
        <li>
            <%= full_messages %>
        </li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="col-sm-3">
<label for="name">名前：</label>
<%= f.text_field :name, class:"form-control" , id:"name" , placeholder:"お名前" %><br>
</div>
<div class="col-sm-2">
<label for="age">年齢：</label>
<%= f.text_field :age  , class:"form-control" , id:"age", placeholder:"半角数字" %><br>
</div>
<div class="col-sm-5">
<label for="textarea">内容：</label>
<%= f.text_area :body , class:"form-control" , :size =>"60x1" , id:"textarea" , placeholder:"コメント" %><br>
</div>
<div class="col-sm-2">
    <br>
<%= f.submit class:"btn btn-sm btn-primary" %><br>
<% end %>
</div>
